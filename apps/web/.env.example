# ─── Database ─────────────────────────────────────────────────────────────────
DATABASE_URL=postgresql://postgres:password@localhost:5432/sessionforge

# ─── Authentication (NextAuth.js v5) ──────────────────────────────────────────
AUTH_SECRET=                    # openssl rand -base64 32
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (console.cloud.google.com)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (github.com/settings/applications/new)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Magic link email (Resend)
AUTH_RESEND_KEY=                # re_...

# ─── Email ─────────────────────────────────────────────────────────────────────
EMAIL_FROM=noreply@sessionforge.dev
RESEND_API_KEY=                 # re_... (same as AUTH_RESEND_KEY or separate)

# ─── Redis (Upstash) ───────────────────────────────────────────────────────────
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=

# ─── Stripe ────────────────────────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_live_...   # or sk_test_... for development
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_TEAM=price_...

# ─── Sentry ─────────────────────────────────────────────────────────────────────
SENTRY_DSN=                     # https://....sentry.io/... (from Sentry project settings)
SENTRY_AUTH_TOKEN=              # sntrys_... (for source map uploads in CI)

# ─── Application ───────────────────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL=http://localhost:3000
DEFAULT_WORKDIR=/home
NODE_ENV=development
