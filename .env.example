# =============================================================================
# SessionForge Environment Variables
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control.
# =============================================================================

# Database
DATABASE_URL=postgresql://sessionforge:localdev@localhost:5432/sessionforge

# Redis
REDIS_URL=redis://localhost:6379

# Auth
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:3000

# OAuth - Google
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OAuth - GitHub
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email (Resend)
RESEND_API_KEY=

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRO_PRICE_ID=
STRIPE_TEAM_PRICE_ID=
STRIPE_ENTERPRISE_PRICE_ID=

# Google Cloud Storage
GCS_BUCKET_NAME=sessionforge-session-logs
GOOGLE_CLOUD_PROJECT=

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=

# WebSocket (optional override)
# WEBSOCKET_URL=ws://localhost:3001

# Node environment (development | test | production)
NODE_ENV=development
