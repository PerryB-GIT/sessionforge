{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "types": ["vitest/globals", "node"],
    "paths": {
      "@sessionforge/shared-types": ["../../packages/shared-types/src/index.ts"]
    }
  },
  "include": ["tests/**/*.ts", "vitest.config.ts"],
  "exclude": ["node_modules"]
}
